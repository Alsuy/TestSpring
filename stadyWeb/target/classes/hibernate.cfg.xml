<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.bytecode.use_reflection_optimizer">false</property>
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.password">123456</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/kondy</property>
        <property name="hibernate.connection.username">postgres</property>
        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>
        <property name="hibernate.hbm2ddl.auto">update</property>
        <property name="show_sql">true</property>

        <mapping class="ru.alsu.springweb.entity.Document"></mapping>
        <mapping class="ru.alsu.springweb.entity.Worker"></mapping>
        <mapping class="ru.alsu.springweb.entity.Organization"></mapping>
        <mapping class="ru.alsu.springweb.entity.Division"></mapping>
        <mapping class="ru.alsu.springweb.entity.Position"></mapping>

    </session-factory>
</hibernate-configuration>